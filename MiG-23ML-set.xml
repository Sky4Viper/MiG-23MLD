<?xml version="1.0" encoding="UTF-8"?>
<PropertyList include="Systems/initialization.xml">
    <sim include="Systems/views.xml">
        <description>Mikoyan-Gurevich MiG-23ML</description>
        <variant-of>MiG-23MLD</variant-of>
        <variant-id type="int">2</variant-id>
        <author>Tim Samedov (3D), Daniel Overbeck, Renaud "Wolf" Roquefort (Liveries)</author>
        <long-description>The Mikoyan-Gurevich MiG-23ML Flogger-G is the mid-life upgrade of this 3rd generation fighter jet. It has Tumanskiy R35-300 engines and was produced since 1975.</long-description>
        <startup>
            <splash-texture>Aircraft/MiG-23MLD/splashML.png</splash-texture>
        </startup>
        <rating>
            <FDM type="int">4</FDM>
            <systems type="int">3</systems>
            <cockpit type="int">5</cockpit>
            <model type="int">5</model>
        </rating>
        <flight-model>jsb</flight-model>
        <aero>MiG-23MLD</aero>
        <model>
            <path>Aircraft/MiG-23MLD/Models/MiG-23ML.xml</path>
        </model>
        <flight-recorder include="Systems/flight-recorder.xml"/>
        <menubar include="gui/menubar.xml"/>
        <help include="gui/help.xml"/>
        <sound>
            <path>Aircraft/MiG-23MLD/Sounds/Sounds.xml</path>
        </sound>
        <multiplay>
            <generic>
                <bool  n="0" type="bool"   alias="/fdm/jsbsim/fcs/dogtooth"/>
                <bool  n="1" type="bool"   alias="/fdm/jsbsim/fcs/vortex-generator"/>
                <bool  n="2" type="bool"   alias="/fdm/jsbsim/fcs/cfd"/>
                <float n="0" type="double" alias="/fdm/jsbsim/fcs/wing-sweep"/>
                <float n="1" type="double" alias="/engines/engine[0]/nozzle-pos-norm"/> <!-- Reheat  -->
                <float n="2" type="double" alias="/engines/engine[0]/augmentation"/> <!-- Reheat  -->
            </generic>
        </multiplay>
        <flaps>
            <setting>0.0</setting>
            <setting>0.5</setting>
            <setting>1.0</setting>
        </flaps>
        <submodels>
            <serviceable type="bool">true</serviceable>
            <path>Aircraft/MiG-23MLD/Systems/submodels.xml</path>
        </submodels>
    </sim>
    <input>
        <keyboard include="Systems/keyboard.xml"/>
    </input>
    <nasal include="Systems/nasal.xml"/>
    <payload include="Systems/payload.xml"/>
</PropertyList>
