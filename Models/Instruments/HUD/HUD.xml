<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <path>HUD.ac</path>
<!--    <effect>
        <inherits-from>Aircraft/MiG-23MLD/Models/Effects/fuselage/reflectglas-uber</inherits-from>
        <object-name>glass</object-name>
    </effect>-->
    <animation>
        <type>rotate</type>
        <object-name>knob</object-name>
        <property>instrumentation/hud/knob</property>
        <factor>25</factor>
        <axis>
            <x1-m> 0.101</x1-m>
            <y1-m> 0.018</y1-m>
            <z1-m>-0.031</z1-m>
            <x2-m> 0.087</x2-m>
            <y2-m> 0.018</y2-m>
            <z2-m>-0.035</z2-m>
        </axis>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>knob</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>hud-bug</tooltip-id>
                <label>Gunsight %s</label>
                <property>instrumentation/hud/knob</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Crosshairs', 'Pipper', 'Radar'];
                    return modes[arg[0]+1];
                </script>
            </binding>
        </hovered>
        <action>
            <name>small decrease</name>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/hud/knob</property>
                <step>1</step>
                <min>-1</min>
                <max>2</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <name>small decrease (scrollwheel)</name>
            <button>3</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/hud/knob</property>
                <step>1</step>
                <min>-1</min>
                <max>2</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <name>small increase (scrollwheel)</name>
            <button>4</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/hud/knob</property>
                <step>-1</step>
                <min>-1</min>
                <max>2</max>
                <wrap>1</wrap>
            </binding>
        </action>
    </animation>
</PropertyList>
