<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <path>ASP-17ML.ac</path>
<!--    <effect>
        <inherits-from>Aircraft/MiG-23MLD/Models/Effects/fuselage/reflectglas-uber</inherits-from>
        <object-name>glass</object-name>
    </effect>-->
    <animation>
        <type>rotate</type>
        <object-name>mode</object-name>
        <property>instrumentation/hud/mode</property>
        <factor>30</factor>
        <center>
            <x-m> 0.110</x-m>
            <y-m> 0.000</y-m>
            <z-m>-0.021</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>-1.0</y>
            <z>0.0</z>
        </axis>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>mode</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>gunsight-bug</tooltip-id>
                <label>%s Mode</label>
                <property>instrumentation/hud/mode</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['A/G', 'A/A'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>instrumentation/hud/mode</property>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>knob</object-name>
        <property>instrumentation/hud/knob</property>
        <factor>25</factor>
        <axis>
            <x1-m> 0.121</x1-m>
            <y1-m> 0.015</y1-m>
            <z1-m>-0.019</z1-m>
            <x2-m> 0.108</x2-m>
            <y2-m> 0.015</y2-m>
            <z2-m>-0.022</z2-m>
        </axis>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>knob</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>hud-bug</tooltip-id>
                <label>%s</label>
                <property>instrumentation/hud/knob</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Crosshairs/CCIP', 'Gun Pipper', 'Radar/Rocket Pipper'];
                    return modes[arg[0]+1];
                </script>
            </binding>
        </hovered>
        <action>
            <name>small decrease</name>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/hud/knob</property>
                <step>1</step>
                <min>-1</min>
                <max>2</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <name>small decrease (scrollwheel)</name>
            <button>3</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/hud/knob</property>
                <step>1</step>
                <min>-1</min>
                <max>2</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <name>small increase (scrollwheel)</name>
            <button>4</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/hud/knob</property>
                <step>-1</step>
                <min>-1</min>
                <max>2</max>
                <wrap>1</wrap>
            </binding>
        </action>
    </animation>
</PropertyList>
