<?xml version="1.0" encoding="UTF-8"?>
<!-- рация -->
<PropertyList>
    <path>switch1.ac</path>
    <animation>
        <type>pick</type>
        <object-name>lever</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>landinglight-bug</tooltip-id>
                <label>Light %s</label>
                <property>fdm/jsbsim/electric/switches/landinglight</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Off', 'Landing', 'Taxi'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>fdm/jsbsim/electric/switches/landinglight</property>
                <step>1</step>
                <min>0</min>
                <max>3</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <button>3</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>fdm/jsbsim/electric/switches/landinglight</property>
                <step>1</step>
                <min>0</min>
                <max>3</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <button>4</button>
            <repeatable>true</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>fdm/jsbsim/electric/switches/landinglight</property>
                <step>-1</step>
                <min>0</min>
                <max>3</max>
                <wrap>1</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>lever</object-name>
        <property>fdm/jsbsim/electric/switches/landinglight</property>
        <interpolation>
            <entry><ind>0.0</ind><dep>-25</dep></entry>
            <entry><ind>2.0</ind><dep>25</dep></entry>
        </interpolation>
        <axis>
            <x>0.0</x>
            <y>-1.0</y>
            <z>0.0</z>
        </axis>
    </animation>
</PropertyList>
