<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <path>knob.ac</path>
    <animation>
        <type>knob</type>
        <object-name>knob</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>instrument-lights-bug</tooltip-id>
                <label>Instrument Lights</label>
            </binding>
        </hovered>
        <property>fdm/jsbsim/electric/switches/instrument-lights</property>
        <factor>180</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>fdm/jsbsim/electric/switches/instrument-lights</property>
                <factor>0.02</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
</PropertyList>
