<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <name>payload</name>
    <modal type="bool">false</modal>
    <draggable>true</draggable>
    <resizable>true</resizable>
    <width>725</width>
    <layout>vbox</layout>

    <group>
        <layout>hbox</layout>
        <empty>
            <stretch>1</stretch>
        </empty>

        <text>
            <label>MiG-23 payload presets</label>
        </text>

        <empty>
            <stretch>1</stretch>
        </empty>

        <button>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <legend></legend>

            <default>1</default>
            <keynum>27</keynum>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </button>
    </group>

    <hrule/>

    <group>
        <layout>hbox</layout>

        <button>
            <legend>Refuel all tanks</legend>
        </button>

        <vrule/>

        <button>
            <legend>Rearm cannons</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.refill_cannons();</script>
            </binding>
        </button>

        <vrule/>

        <button>
            <legend>Refill chaff/flares</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.refill_cf();</script>
            </binding>
        </button>

        <vrule/>

        <button>
            <legend>Repack chute</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.refill_chute();</script>
            </binding>
        </button>
    </group>

    <hrule/>

    <group>
        <layout>table</layout>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>0</row>
            <col>0</col>
            <legend>A/A Default</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.aa_default();</script>
            </binding>
        </button>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>0</row>
            <col>2</col>
            <legend>A/A Low Cost</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.aa_low_cost();</script>
            </binding>
        </button>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>0</row>
            <col>4</col>
            <legend>A/A Guns</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.aa_guns();</script>
            </binding>
        </button>

        <hrule>
            <row>1</row>
            <col>0</col>
            <colspan>6</colspan>
        </hrule>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>2</row>
            <col>0</col>
            <legend>A/G Rockets</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.ag_rockets();</script>
            </binding>
        </button>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>2</row>
            <col>2</col>
            <legend>A/G Bombs Light</legend>
        </button>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>2</row>
            <col>4</col>
            <legend>A/G Bombs Heavy</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.ag_bombs_heavy();</script>
            </binding>
        </button>

    </group>

    <empty><stretch>1</stretch></empty>
</PropertyList>
